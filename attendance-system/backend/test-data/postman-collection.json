{
  "info": {
    "name": "KL University Faculty Attendance System",
    "description": "Complete API test collection for Faculty Attendance System with Face Recognition",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "auth_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Faculty",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dr.john.doe@klu.edu\",\n  \"faculty_id\": \"KLU_FAC_001\",\n  \"full_name\": \"Dr. John Doe\",\n  \"department\": \"Computer Science\",\n  \"designation\": \"Professor\",\n  \"password\": \"SecurePassword123!\",\n  \"face_images\": [\n    \"data:image/jpeg;base64,\",\n    \"data:image/jpeg;base64,\",\n    \"data:image/jpeg;base64,\"\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login Faculty",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dr.john.doe@klu.edu\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.access_token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Current Faculty Info",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/verify-token",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify-token"]
            }
          }
        }
      ]
    },
    {
      "name": "Attendance",
      "item": [
        {
          "name": "Mark Attendance",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"face_image_base64\": \"data:image/jpeg;base64,\",\n  \"network_ssid\": \"DemoHotspot\",\n  \"device_ip\": \"192.168.43.101\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/attendance/mark",
              "host": ["{{base_url}}"],
              "path": ["attendance", "mark"]
            }
          }
        },
        {
          "name": "Get Attendance History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/attendance/history/KLU_FAC_001",
              "host": ["{{base_url}}"],
              "path": ["attendance", "history", "KLU_FAC_001"]
            }
          }
        },
        {
          "name": "Get Today's Attendance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/attendance/today/KLU_FAC_001",
              "host": ["{{base_url}}"],
              "path": ["attendance", "today", "KLU_FAC_001"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/stats",
              "host": ["{{base_url}}"],
              "path": ["admin", "stats"]
            }
          }
        },
        {
          "name": "Get Attendance Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/attendance-logs?limit=50&offset=0",
              "host": ["{{base_url}}"],
              "path": ["admin", "attendance-logs"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Faculty",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/faculty",
              "host": ["{{base_url}}"],
              "path": ["admin", "faculty"]
            }
          }
        }
      ]
    }
  ]
}