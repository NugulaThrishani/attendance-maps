		{
			"name": "5. Attendance System",
			"item": [
				{
					"name": "Mark Attendance (Dhanush Hotspot)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"face_images\": [\n        \"data:image/jpeg;base64,\"\n    ],\n    \"network_info\": {\n        \"ssid\": \"Dhanush\",\n        \"ip_address\": \"192.168.43.100\",\n        \"location\": {\n            \"latitude\": 16.4419,\n            \"longitude\": 80.9831\n        }\n    }\n}"
						},
						"url": {
							"raw": "{{base_url}}/attendance/mark",
							"host": ["{{base_url}}"],
							"path": ["attendance", "mark"]
						}
					},
					"response": []
				},
				{
					"name": "Get Attendance History",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/attendance/history?limit=10",
							"host": ["{{base_url}}"],
							"path": ["attendance", "history"],
							"query": [
								{
									"key": "limit",
									"value": "10"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Today's Attendance",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
